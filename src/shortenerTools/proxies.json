{
  "$schema": "http://json.schemastore.org/proxies",
  "proxies": {
    "legacy forward": {
      "matchCondition": {
        "route": "/UrlShortenerService/UrlShortenerService.svc"
      },
      "backendUri": "http://legacy.beac.co/UrlShortenerService/UrlShortenerService.svc"
    },
    "Domain Redirect": {
      "matchCondition": {
        "route": "/{shortUrl}"
      },
      "backendUri": "http://localhost/api/UrlRedirect/{shortUrl}"
    },
    "Root": {
      "matchCondition": {
        "methods": [
          "GET"
        ],
        "route": "/"
      },
      "responseOverrides": {
        "response.statusCode": "301",
        "response.statusReason": "Moved Permanently",
        "response.headers.location": "%defaultRedirectUrl%"
      }
    }
  }
}
